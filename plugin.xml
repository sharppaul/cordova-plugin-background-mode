<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="e-trailer-services-plugin"
        version="0.1.0">

    <name>E-Trailer Plugin</name>

    <description>Keeps the E-Trailer services running in background. Inspired by background mode and other Phonegap plugins</description>

    <repo>https://github.com/katzer/cordova-plugin-background-mode.git</repo>

    <keywords>e-trailer, bluetooth, background</keywords>

    <license>Apache 2.0</license>

    <author>Paul Weerheim</author>

    <!-- dependencies -->
    <dependency id="cordova-plugin-device" />

    <!-- cordova -->
    <engines>
        <engine name="cordova" version=">=3.0.0" />
        <engine name="android-sdk" version=">=18" />
    </engines>

    <!-- js -->
    <js-module src="www/background-mode.js" name="BackgroundMode">
        <clobbers target="cordova.plugins.backgroundMode" />
        <clobbers target="plugin.backgroundMode" />
    </js-module>
    <js-module src="www/autostart.js" name="AutoStart">
        <clobbers target="cordova.plugins.autostart" />
        <clobbers target="plugin.autostart" />
    </js-module>

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="BackgroundMode">
                <param name="ios-package" value="APPBackgroundMode" onload="true" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <config-file target="*-Info.plist" parent="UIBackgroundModes">
            <array>
                <string>audio</string>
            </array>
        </config-file>

        <resource-file src="appbeep.wav" />

        <header-file src="src/ios/APPBackgroundMode.h" />
        <source-file src="src/ios/APPBackgroundMode.m" />
        <header-file src="src/ios/APPMethodMagic.h" />
        <source-file src="src/ios/APPMethodMagic.m" />
    </platform>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="BackgroundMode" >
                <param name="android-package"
                      value="com.etrailer.backgroundmode.BackgroundMode"/>
            </feature>
            <feature name="AutoStart" >
                <param name="android-package"
                      value="com.etrailer.autostart.AutoStart"/>
            </feature>
        </config-file>

        <config-file target="res/xml/config.xml" parent="/*">
            <preference name="KeepRunning" value="true" />
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <service android:name="com.etrailer.backgroundmode.ForegroundService" />
            <service android:name="com.etrailer.autostart.AutoStartService" />
            <receiver android:name="com.etrailer.autostart.AutoStartBroadcastReceiver"  android:exported="true">
                <intent-filter>
                    <action android:name="com.etrailer.autostart.AutoStartService.ACTION_STOP_WATCHING"/>
                </intent-filter>
            </receiver>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.WAKE_LOCK" />
            <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
        </config-file>

        <source-file
            src="src/android/com/etrailer/autostart/AutoStartService.java"
            target-dir="src/com/etrailer/autostart" />

        <source-file
            src="src/android/com/etrailer/autostart/AutoStart.java"
            target-dir="src/com/etrailer/autostart" />

        <source-file
            src="src/android/com/etrailer/autostart/AutoStartBroadcastReceiver.java"
            target-dir="src/com/etrailer/autostart" />

        <source-file
            src="src/android/com/etrailer/backgroundmode/BackgroundMode.java"
            target-dir="src/com/etrailer/backgroundmode" />

        <source-file
            src="src/android/com/etrailer/backgroundmode/BackgroundExt.java"
            target-dir="src/com/etrailer/backgroundmode" />

        <source-file
            src="src/android/com/etrailer/backgroundmode/ForegroundService.java"
            target-dir="src/com/etrailer/backgroundmode" />

	<framework src="src/android/gradle/build.gradle" custom="true" type="gradleReference" />
    </platform>
</plugin>
